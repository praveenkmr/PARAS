<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_worker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_admin"
    tools:context="com.praveen.naregaregistration.AddWorkerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/signup_card"
        android:paddingRight="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="86dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Worker Registration"
            android:textColor="#00BFFF"
            android:textSize="30dp"
            android:layout_marginTop="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="0dp"
            android:textStyle=""
            android:textAlignment="center"
            android:background="@drawable/topic_background"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:id="@+id/textInputLayout4"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/editTextWorkerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Name"
                android:inputType="text"
                android:textColorHint="@color/btn_login"
                android:textSize="20dp"
                android:layout_below="@+id/textInputLayout5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@+id/textInputLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/editTextJobCardNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Job Card Number"
                android:inputType="numberDecimal"
                android:textColorHint="@color/btn_login"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@+id/textInputLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textInputLayout5"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/editTextWorkerAAdhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Aadhar Number"
                android:inputType="numberDecimal"
                android:textColorHint="@color/btn_login"
                android:textSize="20dp"
                android:layout_below="@+id/editTextWorkerName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnLeftIris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button1"
            android:padding="20dp"
            android:text="Left Iris"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"/>


    </LinearLayout>


</RelativeLayout>
