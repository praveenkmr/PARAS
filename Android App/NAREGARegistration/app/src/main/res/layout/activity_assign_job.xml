<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_job"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_assign_job"
    tools:context="com.praveen.naregaregistration.AssignJobActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/signup_card"
        android:paddingRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assign Job"
            android:textColor="#00BFFF"
            android:textSize="30dp"
            android:layout_marginTop="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="0dp"
            android:textStyle=""
            android:textAlignment="center"
            android:background="@drawable/topic_background"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:id="@+id/textInputLayout4"
            android:padding="10dp"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/editTextAadharName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Aadhar Number"
                android:inputType="numberDecimal"
                android:textColorHint="@color/btn_login"
                android:textSize="20dp"
                android:layout_below="@+id/textInputLayout5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@+id/textInputLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textInputLayout5"
            android:padding="10dp"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/editTextJobID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Job ID"
                android:inputType="numberDecimal"
                android:textColorHint="@color/btn_login"
                android:textSize="20dp"
                android:layout_below="@+id/editTextWorkerName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnAssignJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button1"
            android:padding="20dp"
            android:text="Assign"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"/>


    </LinearLayout>

</RelativeLayout>
